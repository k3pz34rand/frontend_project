{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "types": ["node", "jest"],
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": { "*": ["./src/*"] },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
